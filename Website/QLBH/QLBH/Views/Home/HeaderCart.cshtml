@model List<QLBH.Models.CartItem>

<!-- Begin Header Mini Cart Area -->
<li class="hm-minicart">
    <div class="hm-minicart-trigger">
        <span class="item-icon"></span>
        <span class="item-text">
            số tiền VNĐ
            <span class="cart-item-count">@Model.Count</span>
        </span>
    </div>
    <span></span>
    <div class="minicart">
        <ul class="minicart-product-list">
            @foreach (var item in Model)
            {
                <li>
                    <a href="single-product.html" class="minicart-product-image">
                        <img src="~/Content/CustomerContent/images/product/large-size/@item.Product.Anh" style="width:48px;height:48px" alt="cart products">
                    </a>
                    <div class="minicart-product-details">
                        <h6><a href="single-product.html">@item.Product.TenSP</a></h6>
                        <span>@item.Product.DonGia x @item.Quantity</span>
                    </div>
                    <button class="close">
                        <i class="fa fa-close"></i>
                    </button>
                </li>
            }
        </ul>
